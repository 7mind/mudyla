use flake

# Source Mudyla completions for bash/zsh if available
if [ -f ./completions/init.sh ]; then
  source ./completions/init.sh
elif command -v nix &>/dev/null; then
  _mdl_init=$(nix eval --raw .#packages.$(nix eval --raw --impure --expr 'builtins.currentSystem')/share/mudyla/init.sh 2>/dev/null)
  if [ -n "$_mdl_init" ] && [ -f "$_mdl_init" ]; then
    source "$_mdl_init"
  fi
fi
